
{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 6,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "development",
      "description": "Build to use during iteration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE":"Debug",
        "ENABLE_TESTS": "ON"
      }
    },
    {
      "name": "dev_ninja",
      "hidden": true,
      "inherits" : "dev",
      "generator": "Ninja"
    },
    {
      "name": "dev_ninja_clang",
      "inherits" : "dev_ninja",
      "environment": {
        "CXX": "clang++"
      },
      "binaryDir": "${sourceDir}/builds/dev_ninja_clang"
    },
    {
      "name": "release_ninja_clang",
      "inherits" : "dev_ninja_clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE":"Release",
        "ENABLE_CLANG_TIDY":"ON"
      },
      "binaryDir": "${sourceDir}/builds/release_ninja_clang"
    },
    {
      "name": "dev_ninja_gcc",
      "inherits" : "dev_ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "environment": {
        "CXX": "g++"
      },
      "binaryDir": "${sourceDir}/builds/dev_ninja_gcc"
    },
    {
      "name": "coverage_ninja_gcc",
      "inherits" : "dev_ninja_gcc",
      "cacheVariables": {
        "ENABLE_COVERAGE_REPORT":"ON"
      },
      "binaryDir": "${sourceDir}/builds/coverage_ninja_gcc"
    },
    {
      "name": "dev_vs_msvc",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "ENABLE_TESTS": "ON"
      },
      "condition": {
       "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "binaryDir": "${sourceDir}/builds/dev_vs_msvc"
    }
  ],

  "buildPresets": [
    {
      "name": "dev_vs_msvc",
      "configurePreset": "dev_vs_msvc",
      "targets":["ALL_BUILD"],
      "configuration": "Debug" 
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "dev_ninja_clang",
      "inherits": "default",
      "configurePreset" : "dev_ninja_clang"
    },
    {
      "name": "dev_ninja_gcc",
      "inherits": "default",
      "configurePreset" : "dev_ninja_gcc"
    },
    {
      "name": "dev_vs_msvc",
      "inherits": "default",
      "configurePreset" : "dev_vs_msvc",
      "configuration": "Debug"
    }
  ]
}